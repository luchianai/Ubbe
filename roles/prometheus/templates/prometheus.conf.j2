global:
  scrape_interval: 15s
  evaluation_interval: 15s

# Remote write configuration
remote_write:
{% if prometheus_remote_write_urls is defined %}
{% for remote_write_url in prometheus_remote_write_urls %}
  - url: "{{ remote_write_url.url }}"
    basic_auth:
      username: "{{ remote_write_url.username }}"
      password: "{{ remote_write_url.password }}"
{% endfor %}
{% endif %}

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - localhost:9093

rule_files:
  - alert_rules.yml

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    metrics_path: /metrics
    scheme: http
    static_configs:
      - targets: ['localhost:9090']

  - job_name: alertmanager
    metrics_path: /metrics
    scheme: http
    static_configs:
      - targets: ['localhost:9093']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      {% if node_exporter_targets is defined -%}
      {% for node_exporter_target in node_exporter_targets -%}
      - targets: ['{{ node_exporter_target }}']
      {% endfor -%}
      {% endif %}
